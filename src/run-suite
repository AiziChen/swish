#!/bin/sh -e
if [ -z ${SCHEME+x} ]; then SCHEME=scheme; fi
if [ ${LAUNCH+X} ]; then
  launch="${LAUNCH}"
else
  launch="${SCHEME} --eedisable -q repl.ss run-mats.ss"
fi

if [ $# != 1 ]; then
  echo "Usage: $0 suite"
  exit
fi

find . -name *.mo -delete
rm -f ../data/server.profile
rm -f ../data/TestLog.db3
make -s -C swish

$launch <<EOF
(run-suite "$1" ".")
EOF

# finish up
$launch <<EOF
(html-report "." "suite-report.html")
(console-summary ".")
EOF
