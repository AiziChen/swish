#!/bin/sh -e

if [ $# != 1 -a $# != 2 ]; then
  echo "Usage: $0 suite"
  echo "   or: $0 suite test"
  echo ""
  echo " For example:"
  echo "   $0 swish/json"
  echo " or"
  echo "   $0 swish/erlang chain-reaction"
  exit
fi

launch="./go -q -- $1.ms"

find . -name *.mo -delete
rm -f ../data/server.profile
rm -f ../data/TestLog.db3
make -s -C swish

$launch <<EOF
(import (swish mat))
(run-mats $2)
EOF
